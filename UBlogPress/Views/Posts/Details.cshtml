@using UBlogPress.Models
@using UBlogPress.Controllers
@model UBlogPress.Models.Post



@{
    ViewBag.Title = "Details";
}

<div>
    <h1>@Model.Title</h1>
    <h2>@Model.DtUpdated</h2>
    <div>
        @Model.ContentPost
    </div>
  </div>
<div>
    @if (Model.Comments == null)
    {
   <text>No Comments</text>
    }
    else
    {
    foreach (var comment in Model.Comments)
    {
    <h3>@comment.NameDisplay</h3>    
    <p>@comment.Content</p>
    }
    <form action="~/Views/Posts/Details.cshtml" method="post">
        <textarea id="CommentContent" rows="5" cols="300" draggable="auto"></textarea>
    </form>

    <div>
   @{
        var m = new SearchUserModel { NameDisplay = Model.Blog.User.NameDisplay };
   }
       
        @{
            ((SearchController)ViewContext.Controller).SearchUser(m);
            }
    </div>

    }
</div>

